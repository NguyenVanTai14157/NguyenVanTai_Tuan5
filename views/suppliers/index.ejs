<%- include('../partials/header') %>

<div class="container mt-4">
  <h2 class="mb-3">Suppliers</h2>
  <a href="/suppliers/new" class="btn btn-success mb-3">+ Add Supplier</a>

  <table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th style="width: 150px;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% suppliers.forEach(s => { %>
        <tr>
          <td><%= s.name %></td>
          <td><%= s.address %></td>
          <td><%= s.phone %></td>
          <td>
            <a href="/suppliers/edit/<%= s._id %>" class="btn btn-sm btn-primary">Edit</a>
            <a href="/suppliers/delete/<%= s._id %>" class="btn btn-sm btn-danger"
               onclick="return confirm('Are you sure?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
